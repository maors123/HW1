//אופציה ראשונה
const num1 = 3 ;
((num1%5===0)||(num1%3===0)||(num1%2===0))&&console.log("1")


//אופצייה שנייה
const num = 6;
((num % 2 === 0 && num % 3 === 0) ||
 (num % 3 === 0 && num % 5 === 0) ||
 (num % 2 === 0 && num % 5 === 0)) && console.log("2");

 //אופצייה שלישית
 const num3 = 30;
 (num3%2 === 0 && num3%3 === 0 && num3%5 === 0 ) && console.log("3");
